{
  "name": "activity-tracker",
  "productName": "ActivityTracker",
  "version": "1.0.0",
  "description": "Activity Tracker",
  "main": "main.js",
  "build": {
    "appId": "RansomeCorp.ActivityTracker",
    "directories": {
      "output": "./dist"
    },
    "win": {
      "asar": "true",
      "target": "nsis",
      "icon": "assets/icons/icon.png"
    }
  },
  "scripts": {
    "start-dev": "set ENVIRONMENT=development && electron .",
    "dist": "electron-builder -w",
    "postinstall": "install-app-deps",
    "db:destroy": "rm ./directory-stubs/userData/*.sqlite3*",
    "db:migrate": "set ENVIRONMENT=development node_modules/.bin/sequelize db:migrate",
    "test": "set ENVIRONMENT=test && jest --runInBand --verbose=false"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "node-excel-export": "^1.4.4",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0",
    "sqlite3": "^4.0.1",
    "umzug": "^2.1.0"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^2.0.3",
    "electron-builder": "^20.18.0",
    "jest": "^23.4.1"
  }
}
